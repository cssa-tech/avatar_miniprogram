.tou-list-container {
  align-items: flex-start;
  /* margin-top: 45rpx; */
}

.big-photo-list {
  position: absolute;
  margin-top: 0rpx;
  width: 100%;
}

.big-photo-item {
  /* width: 280rpx; */
  display: flex;
  flex-direction: column;
  padding: 5rpx 0rpx;
  width: 33.33%;
  /* height: 280rpx; */
  text-align: center;
  padding: 20rpx; 
}

.photo {
  width: 100%;
  height: 220rpx;
  box-shadow: rgba(0, 0, 0, 0.0980392) 0px 1px 4px;
  background: #fff;
  border-radius: 10px;
  /* background-color: #cdeffb; */
}

.tou-name {
  display: block;
  margin-top: 5px;
  font-size: 14px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  color: #6F738C;
  font-family: '华文新魏';
}

.bg {
  display: block;
  width: 100%;
  height: 620px;
}